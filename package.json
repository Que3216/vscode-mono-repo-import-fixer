{
    "name": "typescript-mono-repo-import-helper",
    "displayName": "Typescript MonoRepo Import Fixer",
    "description": "Automatically fixes imports of TypeScript files from sibling packages in a mono repo (e.g. Lerna)",
    "version": "0.0.6",
    "publisher": "q",
    "repository": {
        "type": "git",
        "url": "https://github.com/Que3216/vscode-mono-repo-import-fixer.git"
    },
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "lerna",
        "yerna",
        "monorepo",
        "mono",
        "typescript",
        "import"
    ],
    "activationEvents": [
        "onLanguage:typescript",
        "onLanguage:typescriptreact",
        "onCommand:typescript-mono-repo-import-helper.fix"
    ],
    "contributes": {
        "commands": [{
            "command": "typescript-mono-repo-import-helper.fix",
            "title": "Fix typescript imports"
        }]
    },
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^4.3.5",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^12.20.19",
        "@types/mocha": "^2.2.32"
    }
}
